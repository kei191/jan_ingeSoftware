@model List<Laboratorio3.Models.MovieModel>;
@{
    ViewData["Title"] = "Movies";
}
<h1>@ViewBag.MainTitle</h1>
<div>
    <table class="table">
        <thread>
            <tr>
                <th>Movie title</th>
                <th>Gender</th>
                <th>Released date</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Genre</td>
                    <td>@item.ReleasedDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <button>I´m a button</button>
</div>
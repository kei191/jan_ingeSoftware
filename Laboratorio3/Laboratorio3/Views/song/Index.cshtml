@model List<Laboratorio3.Models.SongModel>;
@{
    ViewData["Title"] = "Songs";
}
<h1>@ViewBag.MainTitle</h1>
<div>
    <table class="table">
        <thread>
            <tr>
                <th>Song itle</th>
                <th>Gender</th>
                <th>Singer</th>
                <th>Language</th>
                <th>Released date</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Title</td>
                <td>@item.Genre</td>
                <td>@item.Singer</td>
                <td>@item.Language</td>
                <td>@item.ReleasedDate</td>
            </tr>
            }
        </tbody>
    </table>
</div>